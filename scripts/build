#!/bin/bash
set -e

source $(dirname $0)/version

cd $(dirname $0)/..

mkdir -p bin
[ "$(uname)" != "Darwin" ] && LINKFLAGS="-extldflags -static -s"
GOOS=linux GOARCH=arm64 CGO_ENABLED=0 go build -ldflags "-X main.VERSION=$VERSION -X main.HASH=$COMMIT $LINKFLAGS" -o bin/prometheus-auth ./cmd/main.go
